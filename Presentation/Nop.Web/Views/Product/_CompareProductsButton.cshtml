@model ProductDetailsModel
@inject Nop.Services.Helpers.IUserAgentHelper userAgent
@{
    var addtocomparelink = Url.RouteUrl("AddProductToCompare", new { productId = Model.Id });
}
@if (Model.CompareProductsEnabled)
{
    if (userAgent.IsMobileDevice())
    {
        <div class="selection-panel bg-white mb-3 py-3">
            <div class="container d-flex align-items-center justify-content-between">
                <div class="compare-products">
                    <button type="button" class="button-2 add-to-compare-list-button" onclick="AjaxCart.addproducttocomparelist('@addtocomparelink');return false;">@T("Products.Compare.AddToCompareList")</button>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="compare-products">
            <button type="button" class="button-2 add-to-compare-list-button" onclick="AjaxCart.addproducttocomparelist('@addtocomparelink');return false;">@T("Products.Compare.AddToCompareList")</button>
        </div>

    }
}
