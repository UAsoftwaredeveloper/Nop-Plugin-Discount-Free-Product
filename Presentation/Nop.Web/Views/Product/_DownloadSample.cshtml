@model ProductDetailsModel
@inject Nop.Services.Helpers.IUserAgentHelper userAgent
@if (Model.HasSampleDownload)
{
    if (userAgent.IsMobileDevice())
    {
        <div class="selection-panel bg-white mb-3 py-3">
            <div class="container d-flex align-items-center justify-content-between">
                <div class="download-sample">
                    <a class="button-2 download-sample-button" href="@Url.RouteUrl("GetSampleDownload", new { productid = Model.Id })">@T("Products.DownloadSample")</a>
                </div>
            </div>
        </div>
    }
    else
    {

        <div class="download-sample">
            <a class="button-2 download-sample-button" href="@Url.RouteUrl("GetSampleDownload", new { productid = Model.Id })">@T("Products.DownloadSample")</a>
        </div>
    }
}
