@model IList<CategoryModel>
@inject Nop.Services.Helpers.IUserAgentHelper userAgent
@if (Model.Count > 0)
{
    if (userAgent.IsMobileDevice())
    {
        <!--CATEGORY IN FOCUS-->
        <div class="container pt-3">
            <div class="row ">
                <h6>CATEGORY IN FOCUS</h6>
                @foreach (var item in Model)
                {

                    <div class="col-12 pb-2">
                        <div class="single-vendor-wrap bg-img p-5 bg-overlay" style="background-image: url(@item.PictureModel.ImageUrl)">
                            <h5 class="vendor-title text-white">@item.Name</h5>
                            <div class="vendor-info">
                                <p class="mb-1 text-white">@item.CatalogProductsModel.Products.Count</p>
                            </div>
                            <a class="btn btn-warning btn-sm mt-3" href="@Url.RouteUrl("Category", new { SeName = item.SeName })">Buy Products <i class="fa fa-arrow-right"></i></a>
                        </div>
                    </div>
                    
                }
            </div>
        </div>

    }
    else
    {
        <section class="pt-5 mt-2 appear-animate" data-animation-options="{'delay': '.3s'}">
            <div class="container">
                <div class="row">
                    <div class="col-xs-1 col-lg-1">&nbsp;</div>
                    <div class="col-xs-10 col-lg-10">
                        <div class="row">
                            <!--<div class="pos_title"><h2> WOMANCART <span> FETURED BRAND</span> </h2></div>-->
                            @foreach (var item in Model)
                            {
                                <div class="col-md-3 brand"
                                     style=" background-image: url(@item.PictureModel.ImageUrl);">
                                    <a href="@Url.RouteUrl("Category", new { SeName = item.SeName })" title="@item.PictureModel.Title">
                                        <h4> @item.Name</h4>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }

}