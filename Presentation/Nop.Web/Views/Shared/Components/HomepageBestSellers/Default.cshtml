@model IList<ProductOverviewModel>
@inject Nop.Services.Helpers.IUserAgentHelper userAgent
@if (Model.Count > 0)
{
    if (userAgent.IsMobileDevice())
    {
        <!--Best Sellers-->
        <div class="flash-sale-wrapper pt-4">
            <div class="container">
                <div class="section-heading d-flex align-items-center justify-content-between">
                    <h6 class="me-1 d-flex align-items-center">Best Seller</h6>
                </div>
                <div class="flash-sale-slide owl-carousel">
                    @foreach (var item in Model)
                    {

                        @await Html.PartialAsync("_ProductBox", item)

                    }
                </div>
            </div>
        </div>

    }
    else
    {

        <section class="container mt-3 pt-3 mb-2 pb-2">
            <div class="row">
                <div class="col-xs-1 col-lg-1">&nbsp;</div>
                <div class="col-xs-10 col-lg-10">
                    <div class="pos_title">
                        <h2>@T("Bestsellers")<span> WOMANCART </span> </h2>
                    </div>
                    <div class="owl-carousel owl-theme owl-nav-inner row cols-xl-5 cols-lg-4 cols-md-3 cols-2 mb-2 pb-2 appear-animate" data-animation-options="{'name': 'fadeIn'}" data-owl-options="{
'nav': true,
'dots': false,
'margin': 20,
'loop': true,
'items': 1,
'autoplay': true,
'autoplayTimeout': 3000,
'responsive': {
'0': {
'items': 2
},
'576': {
'items': 2
},
'768': {
'items': 3
},
'992': {
'items': 4
},
'1200': {
'items': 5
}
}
}">
                        @foreach (var item in Model)
                        {


                            @await Html.PartialAsync("_Bestsellerproduct", item)

                        }
                    </div>

                </div>
            </div>

        </section>
    }
}

