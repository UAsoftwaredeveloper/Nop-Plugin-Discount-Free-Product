@model IList<ProductOverviewModel>
@inject Nop.Services.Helpers.IUserAgentHelper userAgent
@if (Model.Count > 0)
{
    if (userAgent.IsMobileDevice())
    {
        <div class="flash-sale-wrapper pt-4">
            <div class="container">
                <div class="section-heading d-flex align-items-center justify-content-between">
                    <h6 class="me-1 d-flex align-items-center"><i class="fa fa-flash"></i>@T("Homepage.Products") </h6>
                    <ul class="sales-end-timer ps-0 d-flex align-items-center" data-countdown="2022/01/01 14:21:37">
                        <li><span class="days">0</span>d</li>
                        <li><span class="hours">0</span>h</li>
                        <li><span class="minutes">0</span>m</li>
                        <li><span class="seconds">0</span>s</li>
                    </ul>
                </div>
                <div class="flash-sale-slide owl-carousel">
                    @foreach (var item in Model)
                    {
                        @await Html.PartialAsync("_ProductBox", item)
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <section class="container mt-3 pt-3 mb-2 pb-2">
            <div class="row">
                <div class="col-xs-1 col-lg-1">&nbsp;</div>
                <div class="col-xs-10 col-lg-10">
                    <div class="pos_title">
                        <h2>@T("Homepage.Products")<span> WOMANCART </span> </h2>
                    </div>
                    <div id="featuredP" class="owl-carousel owl-theme owl-nav-inner row appear-animate" data-animation-options="{'name': 'fadeIn'}" data-owl-options="{
'nav': true,
'dots': false,
'margin': 20,
'loop': true,
'items': 1,
'autoplay': true,
'autoplayTimeout': 3000,
'responsive': {
'0': {
'items': 1.5
},
'576': {
'items': 2
},
'768': {
'items': 3
},
'992': {
'items': 4
},
'1200': {
'items': 5
}
}
}">
                        @foreach (var item in Model)
                        {


                            @await Html.PartialAsync("_Bestsellerproduct", item)

                        }
                    </div>

                </div>
            </div>

        </section>
    }

}
